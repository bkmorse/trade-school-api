{
  "info": {
    "name": "Trade School API",
    "description": "Complete API collection for Trade School endpoints with PostgreSQL and Prisma",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "trade-school-api"
  },
  "item": [
    {
      "name": "Info",
      "item": [
        {
          "name": "Get API Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            },
            "description": "Get API information and available endpoints"
          },
          "response": []
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            },
            "description": "Check API and database connectivity"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Schools",
      "item": [
        {
          "name": "Get All Schools",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/schools",
              "host": ["{{baseUrl}}"],
              "path": ["api", "schools"]
            },
            "description": "Get all trade schools"
          },
          "response": []
        },
        {
          "name": "Get All Schools - Filter by Program",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/schools?program=Welding",
              "host": ["{{baseUrl}}"],
              "path": ["api", "schools"],
              "query": [
                {
                  "key": "program",
                  "value": "Welding",
                  "description": "Filter by exact program name"
                }
              ]
            },
            "description": "Get schools that offer a specific program (exact match)"
          },
          "response": []
        },
        {
          "name": "Get All Schools - Filter by Location",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/schools?location=Virginia",
              "host": ["{{baseUrl}}"],
              "path": ["api", "schools"],
              "query": [
                {
                  "key": "location",
                  "value": "Virginia",
                  "description": "Filter by location (case-insensitive partial match)"
                }
              ]
            },
            "description": "Get schools in a specific location"
          },
          "response": []
        },
        {
          "name": "Get All Schools - Multiple Filters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/schools?program=Automotive&location=Illinois",
              "host": ["{{baseUrl}}"],
              "path": ["api", "schools"],
              "query": [
                {
                  "key": "program",
                  "value": "Automotive"
                },
                {
                  "key": "location",
                  "value": "Illinois"
                }
              ]
            },
            "description": "Get schools filtered by both program and location"
          },
          "response": []
        },
        {
          "name": "Get School by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/schools/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "schools", "1"]
            },
            "description": "Get a specific school by ID"
          },
          "response": []
        },
        {
          "name": "Create School",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"ABC Technical Institute\",\n  \"location\": \"New York, NY\",\n  \"programs\": [\n    \"Plumbing\",\n    \"HVAC\",\n    \"Electrical\"\n  ],\n  \"website\": \"https://www.abctech.edu\",\n  \"accredited\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/schools",
              "host": ["{{baseUrl}}"],
              "path": ["api", "schools"]
            },
            "description": "Create a new trade school"
          },
          "response": []
        },
        {
          "name": "Update School",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"location\": \"Updated Location, NY\",\n  \"programs\": [\n    \"Plumbing\",\n    \"HVAC\",\n    \"Electrical\",\n    \"Welding\"\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/schools/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "schools", "1"]
            },
            "description": "Update an existing school (all fields optional)"
          },
          "response": []
        },
        {
          "name": "Delete School",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/schools/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "schools", "1"]
            },
            "description": "Delete a school by ID"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Programs",
      "item": [
        {
          "name": "Get All Programs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/programs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "programs"]
            },
            "description": "Get all unique programs offered across all schools"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Statistics",
      "item": [
        {
          "name": "Get Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/stats",
              "host": ["{{baseUrl}}"],
              "path": ["api", "stats"]
            },
            "description": "Get statistics about trade schools and programs"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
}

